<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/background"
                android:paddingBottom="@dimen/activity_vertical_margin"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                tools:context="ru.pva33.whereparking.PPEditActivity"
    >

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:text="@string/title_activity_ppedit"
        android:textSize="@dimen/abc_dialog_padding_material"
        android:textStyle="bold|italic"
        />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/edName"
        android:text="@string/ppNameLable"
        />

    <EditText
        android:id="@+id/edName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="false"
        android:layout_below="@+id/tvTitle"
        android:layout_toLeftOf="@+id/bSound"
        android:layout_toRightOf="@+id/textView8"
        android:inputType="text"
        />

    <ImageButton
        android:id="@+id/bSound"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/sound"
        android:nestedScrollingEnabled="false"
        android:onClick="onClick"
        />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/edName"
        android:layout_marginTop="12dp"
        android:text="Звук"
        android:textAppearance="?android:attr/textAppearanceSmall"
        />

    <TextView
        android:id="@+id/edSoundPath"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/textView9"
        android:layout_toLeftOf="@+id/bSound"
        android:layout_toRightOf="@+id/textView9"
        android:layout_toStartOf="@+id/bSound"
        android:text="tvSoundPath"
        android:textAppearance="?android:attr/textAppearanceSmall"
        />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/bSound"
        android:text="Координаты"
        android:textAppearance="?android:attr/textAppearanceSmall"
        />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/edLongitude"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:text="Доглота"
        android:textAppearance="?android:attr/textAppearanceSmall"
        />

    <TextView
        android:id="@+id/textView12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/edLatitude"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:text="Широта"
        android:textAppearance="?android:attr/textAppearanceSmall"
        />

    <EditText
        android:id="@+id/edLongitude"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/edName"
        android:layout_alignRight="@+id/edName"
        android:layout_below="@+id/textView10"
        android:layout_toRightOf="@+id/textView11"
        android:ems="10"
        android:inputType="numberDecimal|numberSigned"
        />

    <EditText
        android:id="@+id/edLatitude"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/edName"
        android:layout_alignLeft="@+id/edLongitude"
        android:layout_alignRight="@+id/edName"
        android:layout_alignStart="@+id/edLongitude"
        android:layout_below="@+id/edLongitude"
        android:ems="10"
        android:inputType="numberDecimal|numberSigned"
        />

    <ImageButton
        android:id="@+id/bMap"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/textView10"
        android:background="@drawable/map"
        android:onClick="onClick"
        />

    <Button
        android:id="@+id/bSave"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView12"
        android:layout_toEndOf="@+id/textView8"
        android:layout_toRightOf="@+id/textView8"
        android:onClick="onClick"
        android:text="@string/bSave"
        />

</RelativeLayout>
